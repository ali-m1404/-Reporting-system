@using Report.Domain.ViewModels
@model RegisterUserViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ثبت‌نام در سیستم</title>
    <link rel="stylesheet" href="~/css/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-md">
            <div class="text-center">
                <div class="mx-auto w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mb-4">
                    <span class="text-white font-bold text-xl">لوگو</span>
                </div>
                <h2 class="mt-2 text-3xl font-bold text-gray-900">ایجاد حساب کاربری</h2>
                <p class="mt-2 text-sm text-gray-600">
                    یا
                    <a asp-controller="account" asp-action="login" class="font-medium text-blue-600 hover:text-blue-500 transition">
                        ورود به حساب کاربری
                    </a>
                </p>
            </div>

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
            {
                <div class="text-red-600 bg-red-50 p-4 rounded-lg mb-4">
                    <i class="fas fa-exclamation-triangle ml-2"></i>
                    @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                    {
                        <span>@error.ErrorMessage</span>
                    }
                </div>
            }

            <!-- ✅ اصلاح مهم: اضافه کردن enctype="multipart/form-data" -->
            <form asp-controller="Account" asp-action="Register"
                  class="mt-8 space-y-6"
                  method="post"
                  enctype="multipart/form-data">
                <!-- این خط اضافه شد -->
                @Html.AntiForgeryToken() <!-- اضافه کردن توکن امنیتی -->

                <div class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">نام</label>
                            <input asp-for="FirstName" type="text" required class="form-input">
                            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">نام خانوادگی</label>
                            <input asp-for="LastName" type="text" required class="form-input">
                            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">ایمیل</label>
                        <input asp-for="Email" type="email" required class="form-input">
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label">شماره موبایل</label>
                        <input asp-for="PhoneNumber" type="tel" required class="form-input">
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">رمز عبور</label>
                        <input asp-for="Password" type="password" required class="form-input">
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RePassword" class="form-label">تکرار رمز عبور</label>
                        <input asp-for="RePassword" type="password" required class="form-input">
                        <span asp-validation-for="RePassword" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- ✅ اصلاح: مطابقت نام فیلدها با ViewModel -->
                    <div class="form-group">
                        <label asp-for="ProfileImage" class="form-label">عکس پروفایل</label>
                        <input asp-for="ProfileImage" type="file"
                               class="form-input cursor-pointer file:cursor-pointer
                                      file:border-0 file:py-2 file:px-4
                                      file:bg-blue-50 file:text-blue-700 file:rounded-lg">
                        <span asp-validation-for="ProfileImage" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IdentityImage" class="form-label">عکس تذکره</label>
                        <input asp-for="IdentityImage" type="file" required
                               class="form-input cursor-pointer file:cursor-pointer
                                      file:border-0 file:py-2 file:px-4
                                      file:bg-blue-50 file:text-blue-700 file:rounded-lg">
                        <span asp-validation-for="IdentityImage" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary w-full py-3 px-4
                                bg-blue-600 hover:bg-blue-700 text-white font-medium
                                rounded-lg transition duration-300">
                            ایجاد حساب کاربری
                        </button>
                    </div>
                </div>

                 @{

                    var roleId = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
                    @if (roleId == "1" || roleId == "2")
                    {
                      
                            <div class="text-center">
                            <a asp-controller="usermanagement" asp-action="Index" class="text-sm text-blue-600 hover:text-blue-500 transition">
                                    بازگشت به صفحه اصلی
                                </a>
                            </div>
                    }
                    else
                    {
                         <div class="text-center">
                            <a asp-controller="account" asp-action="login" class="text-sm text-blue-600 hover:text-blue-500 transition">
                                بازگشت به صفحه اصلی
                            </a>
                        </div>
                    }
                 } 

                
            </form>
        </div>
    </div>

    <!-- اضافه کردن validation scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>