
@using Report.Domain.ViewModels
@using Report.Domain.Entities.Enums1
@model ReportIndexViewModel

<div id="content-area" class="bg-white shadow-md rounded-lg p-6">
    <div class="fade-in">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">
                @(Model.Reports.Any() ? Model.Reports.First().UserFullName : "") گزارشات
            </h2>

            <button id="add-report-btn" class="btn btn-primary">

                <i class="fas fa-plus mr-2"></i>
                <a asp-controller="ReportManagement"
                   asp-action="Create">
                    گزارش جدید
                    @* asp-route-id="@userId">> </a> *@
                </a>
            </button>

        </div>



        <form asp-controller="ReportManagement" asp-action="index">
            <div class="p-4 border-b border-gray-200 flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="mb-4 md:mb-0">
                    <input type="text" asp-for="Search" placeholder="جستجوی گزارش..." class="form-input w-full md:w-64">
                </div>
                <div class="flex space-x-2 flex-wrap">
                    <select asp-for="ReportTypeId" class="form-input w-full md:w-auto mb-2 md:mb-0">
                        <option value="">همه انواع</option>
                        <option value="1">روزانه</option>
                        <option value="2">هفته وار</option>
                        <option value="2"> مسولیت</option>
                    </select>
                    <select asp-for="ReportStatusId" class="form-input w-full md:w-auto mb-2 md:mb-0">
                        <option value="">همه وضعیت‌ها</option>
                        <option value="1">در انتظار</option>
                        <option value="2">تایید شده</option>
                        <option value="3">رد شده</option>
                    </select>
                    <input asp-for="FromDate" type="date" class="form-input ..." />
                    <input asp-for="ToDate" type="date" class="form-input ..." />
                    <button type="submit" class="btn btn-primary ml-2"> فیلتر </button>
                </div>
            </div>
        </form>

            <div class="overflow-x-auto">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>عنوان گزارش</th>
                            <th>نوع</th>
                            <th>کاربر</th>
                            <th>تاریخ ایجاد</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model.Reports)
                        {
                            <tr>
                                <td>@report.Title</td>
                                <td>@report.ReportType</td>
                                <td>@report.UserFullName</td>
                                <td>@report.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (report.Status == ReportStatus.Pending)
                                    {
                                        <span class="status-pending">در انتظار</span>
                                    }
                                    else if (report.Status == ReportStatus.Approved)
                                    {
                                        <span class="status-approved">تأیید شده</span>
                                    }
                                    else
                                    {
                                        <span class="status-rejected">رد شده</span>
                                    }
                                </td>

                                <td>
                                    <div class="flex space-x-2">

                                        <!-- مشاهده -->
                                        <button type="button"
                                                class="text-blue-600 hover:text-blue-800 view-report"
                                                data-id="@report.Id">
                                            <i class="fas fa-eye"></i>
                                        </button>

                                    </div>
                                </td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <div class="p-4 border-t border-gray-200 flex justify-between items-center">
                <div class="text-sm text-gray-500">
                    نمایش 5 از 5 گزارش
                </div>
                <div class="flex space-x-2">
                    <button class="px-3 py-1 bg-gray-200 rounded-md text-gray-700 disabled:opacity-50" disabled="">
                        قبلی
                    </button>
                    <button class="px-3 py-1 bg-blue-600 text-white rounded-md">
                        1
                    </button>
                    <button class="px-3 py-1 bg-gray-200 rounded-md text-gray-700 disabled:opacity-50" disabled="">
                        بعدی
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>