@model Report.Domain.ViewModels.ReportDetailsViewModel

<div class="min-h-screen bg-gray-50 p-4 md:p-6 lg:p-8">
    <div class="max-w-4xl mx-auto">

        <!-- هدر صفحه -->
        <div class="mb-8">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">جزئیات گزارش</h1>
            <p class="text-gray-600">مشاهده کامل اطلاعات گزارش</p>
        </div>

        <!-- کارت اصلی -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200">

            <!-- هدر کارت -->
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-6">
                <div class="flex flex-col md:flex-row md:items-center justify-between">
                    <div>
                        <h2 class="text-xl md:text-2xl font-bold text-white mb-1">@Model.Title</h2>
                        <div class="flex items-center text-blue-100">
                            <span class="ml-2">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                </svg>
                            </span>
                            <span>ایجاد شده توسط: @Model.CreatedBy</span>
                        </div>
                    </div>

                    <!-- وضعیت گزارش -->
                    <div class="mt-4 md:mt-0">
                        @{
                            var statusClass = Model.Status == 1 ? "bg-yellow-100 text-yellow-800 border-yellow-200" :
                            Model.Status == 2 ? "bg-green-100 text-green-800 border-green-200" :
                            "bg-red-100 text-red-800 border-red-200";

                            var statusText = Model.Status == 1 ? "در انتظار" :
                            Model.Status == 2 ? "تأیید شده" :
                            "رد شده";
                        }
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium border @statusClass">
                            @if (Model.Status == 2)
                            {
                                <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            }
                            else if (Model.Status == 3)
                            {
                                <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            }
                            else
                            {
                                <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                </svg>
                            }
                            @statusText
                        </span>
                    </div>
                </div>
            </div>

            <!-- بدنه کارت -->
            <div class="p-6 md:p-8">
                <!-- اطلاعات اصلی در دو ستون (در صفحه های بزرگ) -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">

                    <!-- ستون اول -->
                    <div class="space-y-6">
                        <!-- نوع گزارش -->
                        <div>
                            <div class="flex items-center text-gray-500 mb-2">
                                <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                                </svg>
                                <span class="font-medium">نوع گزارش</span>
                            </div>
                            @{
                                string reportTypeText = Model.ReportTypeId switch
                                {
                                    1 => "روزانه",
                                    2 => "هفته‌وار",
                                    3 => "ماه وار",
                                    _ => "گزارش مسولیت"
                                };
                            }

                            <div class="bg-gray-50 p-4 rounded-xl border border-gray-200">
                                <p class="text-gray-800 font-semibold">@reportTypeText</p>
                            </div>

                        </div>

                        <!-- تاریخ ایجاد -->
                        <div>
                            <div class="flex items-center text-gray-500 mb-2">
                                <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                </svg>
                                <span class="font-medium">تاریخ ایجاد</span>
                            </div>
                            <div class="bg-gray-50 p-4 rounded-xl border border-gray-200">
                                <p class="text-gray-800 font-semibold">@Model.CreatedAt.ToString("yyyy/MM/dd ساعت HH:mm")</p>
                            </div>
                        </div>

                        <!-- تأیید کننده (در صورت تأیید) -->
                        @if (Model.IsApproved && !string.IsNullOrEmpty(Model.ApprovedBy))
                        {
                            <div>
                                <div class="flex items-center text-gray-500 mb-2">
                                    <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="font-medium">تأیید کننده</span>
                                </div>
                                <div class="bg-green-50 p-4 rounded-xl border border-green-200">
                                    <p class="text-green-800 font-semibold">@Model.ApprovedBy</p>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- ستون دوم - فایل پیوست -->
                    @if (!string.IsNullOrEmpty(Model.FilePath))
                    {
                        <div class="space-y-6">
                            <div>
                                <div class="flex items-center text-gray-500 mb-2">
                                    <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="font-medium">فایل دریافت شده</span>
                                </div>
                                <div class="bg-blue-50 p-4 rounded-xl border border-blue-200">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center">
                                            <svg class="w-8 h-8 text-blue-500 ml-3" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
                                            </svg>
                                            <div>
                                                <p class="font-semibold text-gray-800">فایل گزارش</p>
                                                <p class="text-sm text-gray-500">برای مشاهده کلیک کنید</p>
                                            </div>
                                        </div>
                                        <a href="@Url.Content(Model.FilePath)" target="_blank"
                                           class="flex items-center bg-white text-blue-600 hover:bg-blue-50 px-4 py-2 rounded-lg border border-blue-300 hover:border-blue-400 transition duration-200 font-medium">
                                            <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                                                <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                                            </svg>
                                            مشاهده فایل
                                        </a>
                                    </div>
                                </div>

                                <div>
                                    <div class="flex items-center text-gray-500 mb-2">
                                        <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                        </svg>
                                        <span class="font-medium">آخرین بروزرسانی</span>
                                    </div>
                                    <div class="bg-gray-50 p-4 rounded-xl border border-gray-200">
                                        <div class="font-bold text-gray-800">@DateTime.Now.ToString("yyyy/MM/dd")</div>
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                    }
                </div>

                <!-- توضیحات (بزرگتر) -->
                <div class="mb-8">
                    <div class="flex items-center text-gray-500 mb-3">
                        <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-lg font-medium">توضیحات گزارش</span>
                    </div>
                    <div class="bg-gray-50 p-5 rounded-xl border border-gray-200">
                        <p class="text-gray-800 leading-relaxed whitespace-pre-line">@Model.Description</p>
                    </div>
                </div>

               @{

                    var roleId = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
                    @if (roleId == "1" || roleId == "2")
                    {
                        <div class="pt-6 border-t border-gray-200 flex justify-end">
                            <a asp-action="index"
                               class="flex items-center bg-gray-100 hover:bg-gray-200 text-gray-800 px-5 py-3 rounded-xl font-medium transition duration-200">
                                <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                                بازگشت به لیست گزارش‌ها
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="pt-6 border-t border-gray-200 flex justify-end">
                            <a asp-action="MyReports"
                               class="flex items-center bg-gray-100 hover:bg-gray-200 text-gray-800 px-5 py-3 rounded-xl font-medium transition duration-200">
                                <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                                بازگشت به لیست گزارش‌ها
                            </a>
                        </div>
                    }
                }
                   
                    
               

            </div>
        </div>

        

    </div>
</div>

<!-- استایل‌های سفارشی -->
<style>
    /* انیمیشن‌های جزئی برای بهبود تجربه کاربری */
    .shadow-lg {
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .transition {
        transition: all 0.2s ease-in-out;
    }

    .whitespace-pre-line {
        white-space: pre-line;
    }
</style>