
@using Microsoft.AspNetCore.Identity
@using Report.Domain.ViewModels
@using Report.Domain.Entities.Enums1
@model List<ReportListItemViewModel>


<div id="content-area" class="bg-white shadow-md rounded-lg p-6">
    <div class="fade-in">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">مدیریت گزارشات</h2>

            <button id="add-report-btn" class="btn btn-primary">
                    
                <i class="fas fa-plus mr-2"></i>
                <a asp-controller="ReportManagement"
                   asp-action="Create">
                    گزارش جدید
                   @* asp-route-id="@userId">> </a> *@
               </a>
            </button>

        </div>



        <form method="get">
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="p-4 border-b border-gray-200 flex flex-col md:flex-row md:items-center md:justify-between">
                    <div class="mb-4 md:mb-0">
                        <input type="text" id="report-search" name="search" placeholder="جستجوی گزارش..." class="form-input w-full md:w-64">
                    </div>
                    <div class="flex space-x-2 flex-wrap">
                        <select id="report-type-filter" name="type" class="form-input w-full md:w-auto mb-2 md:mb-0">
                            <option value="">همه انواع</option>
                            <option value="1">روزانه</option>
                            <option value="2">هفته وار</option>
                        </select>
                        <select id="report-status-filter" name="status" class="form-input w-full md:w-auto mb-2 md:mb-0">
                            <option value="">همه وضعیت‌ها</option>
                            <option value="1">در انتظار</option>
                            <option value="2">تایید شده</option>
                            <option value="3">رد شده</option>
                        </select>
                        <input type="date" id="report-date-filter" name="date" class="form-input w-full md:w-auto">
                        <button type="submit" class="btn btn-primary ml-2">
                            فیلتر
                        </button>
                    </div>
                </div>
            </div>
        </form>

       
            <div class="overflow-x-auto">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>عنوان گزارش</th>
                            <th>نوع</th>
                            <th>کاربر</th>
                            <th>تاریخ ایجاد</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>@report.Title</td>
                                <td>@report.ReportType</td>
                                <td>@report.UserFullName</td>
                                <td>@report.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (report.Status == ReportStatus.Pending)
                                    {
                                        <span class="status-pending">در انتظار</span>
                                    }
                                    else if (report.Status == ReportStatus.Approved)
                                    {
                                        <span class="status-approved">تأیید شده</span>
                                    }
                                    else
                                    {
                                        <span class="status-rejected">رد شده</span>
                                    }
                                </td>

                                <td>
                                    <div class="flex space-x-2">

                                        <!-- مشاهده -->
                                        <button type="button"
                                                class="text-blue-600 hover:text-blue-800 view-report"
                                                data-id="@report.Id">
                                            <i class="fas fa-eye"></i>
                                        </button>

                                        <!-- تایید -->
                                        <button type="button"
                                                class="text-green-600 hover:text-green-800 approve-report"
                                                data-id="@report.Id">
                                            <i class="fas fa-check"></i>
                                        </button>

                                        <!-- رد -->
                                        <button type="button"
                                                class="text-yellow-600 hover:text-yellow-800 reject-report"
                                                data-id="@report.Id">
                                            <i class="fas fa-times"></i>
                                        </button>

                                        <!-- حذف -->
                                        <button type="button"
                                                class="text-red-600 hover:text-red-800 delete-report"
                                                data-id="@report.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>

                                    </div>
                                </td>


                            </tr>
                        }

                      
                    </tbody>
                </table>
            </div>

            <div class="p-4 border-t border-gray-200 flex justify-between items-center">
                <div class="text-sm text-gray-500">
                    نمایش 7 از 7 گزارش
                </div>
                <div class="flex space-x-2">
                    <button class="px-3 py-1 bg-gray-200 rounded-md text-gray-700 disabled:opacity-50" disabled="">
                        قبلی
                    </button>
                    <button class="px-3 py-1 bg-blue-600 text-white rounded-md">
                        1
                    </button>
                    <button class="px-3 py-1 bg-gray-200 rounded-md text-gray-700 disabled:opacity-50" disabled="">
                        بعدی
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>