@using Report.Domain.ViewModels
@model CreateReportViewModel

@{
    ViewData["Title"] = "ایجاد گزارش جدید";
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-4 md:p-6 lg:p-8">
    <div class="max-w-3xl mx-auto">

        <!-- هدر صفحه -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-2xl mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">ایجاد گزارش جدید</h1>
            <p class="text-gray-600 max-w-2xl mx-auto">فرم زیر را با دقت پر کنید تا گزارش جدید شما ایجاد شود</p>
        </div>

        <!-- پیام موفقیت -->
        @if (TempData["Success"] != null)
        {
            <div class="mb-8 p-4 bg-green-50 border-l-4 border-green-500 rounded-r-lg shadow-sm animate-fade-in">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-green-500 ml-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <p class="text-green-800 font-medium">@TempData["Success"]</p>
                </div>
            </div>
        }

        <!-- فرم اصلی -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
            <!-- هدر فرم -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 p-6">
                <div class="flex items-center">
                    <div class="ml-4">
                        <h2 class="text-xl font-bold text-white">مشخصات گزارش</h2>
                        <p class="text-blue-100 text-sm mt-1">لطفا تمامی فیلدهای ضروری را پر کنید</p>
                    </div>
                </div>
            </div>

            <!-- بدنه فرم -->
            <div class="p-6 md:p-8">
                <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-8">

                    <!-- UserId مخفی -->
                    <input asp-for="UserId" type="hidden" value="@userId" />

                    <!-- ردیف اول: عنوان و نوع گزارش -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                        <!-- فیلد عنوان -->
                        <div>
                            <label asp-for="Title" class="block mb-2">
                                <span class="text-gray-700 font-semibold flex items-center">
                                    <svg class="w-4 h-4 ml-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                    </svg>
                                    موضوع گزارش
                                </span>
                                <span class="text-xs text-gray-500">عنوان واضح و مختصر برای گزارش</span>
                            </label>
                            <div class="mt-2 relative">
                                <input asp-for="Title"
                                       placeholder="مثلاً: گزارش کار های  روزانه / هفته وار"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 placeholder:text-gray-400" />
                                <div class="absolute left-3 top-3">
                                    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 13V5a2 2 0 00-2-2H4a2 2 0 00-2 2v8a2 2 0 002 2h3l3 3 3-3h3a2 2 0 002-2zM5 7a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1zm1 3a1 1 0 100 2h3a1 1 0 100-2H6z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                            <span asp-validation-for="Title" class="block text-sm text-red-600 mt-2"></span>
                        </div>

                        <!-- فیلد نوع گزارش -->
                        <div>
                            <label asp-for="ReportTypeId" class="block mb-2">
                                <span class="text-gray-700 font-semibold flex items-center">
                                    <svg class="w-4 h-4 ml-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                                    </svg>
                                    نوع گزارش
                                </span>
                                <span class="text-xs text-gray-500">نوع گزارش خود را انتخاب کنید</span>
                            </label>
                            <div class="mt-2 relative">
                                <select asp-for="ReportTypeId" asp-items="Model.ReportTypes"
                                        class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white appearance-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 pr-10">
                                    <option value="">-- انتخاب نوع گزارش --</option>
                                </select>
                                <div class="absolute left-3 top-3 pointer-events-none">
                                    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                            <span asp-validation-for="ReportTypeId" class="block text-sm text-red-600 mt-2"></span>
                        </div>
                    </div>

                    <!-- فیلد توضیحات -->
                    <div>
                        <label asp-for="Description" class="block mb-2">
                            <span class="text-gray-700 font-semibold flex items-center">
                                <svg class="w-4 h-4 ml-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                </svg>
                                توضیحات گزارش
                            </span>
                            <span class="text-xs text-gray-500">جزئیات کامل گزارش را اینجا بنویسید</span>
                        </label>
                        <div class="mt-2">
                            <div class="relative">
                                <textarea asp-for="Description"
                                          rows="5"
                                          placeholder="جزئیات گزارش خود را به صورت کامل اینجا وارد کنید..."
                                          class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-y min-h-[140px] placeholder:text-gray-400 pr-10"></textarea>
                                <div class="absolute left-3 top-3">
                                    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 13V5a2 2 0 00-2-2H4a2 2 0 00-2 2v8a2 2 0 002 2h3l3 3 3-3h3a2 2 0 002-2zM5 7a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1zm1 3a1 1 0 100 2h3a1 1 0 100-2H6z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                            <div class="mt-2 text-xs text-gray-500 flex justify-between">
                                <span>توضیحات کامل گزارش</span>
                                <span class="text-blue-600">حداقل 50 کاراکتر</span>
                            </div>
                        </div>
                        <span asp-validation-for="Description" class="block text-sm text-red-600 mt-2"></span>
                    </div>

                    <!-- فیلد فایل -->
                    <div>
                        <label asp-for="File" class="block mb-2">
                            <span class="text-gray-700 font-semibold flex items-center">
                                <svg class="w-4 h-4 ml-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z" clip-rule="evenodd" />
                                </svg>
                                ضمیمه فایل
                            </span>
                            <span class="text-xs text-gray-500">فایل‌های مرتبط با گزارش (اجباری است)</span>
                        </label>
                        <div class="mt-2">
                            <div class="relative group">
                                <input asp-for="File"
                                       type="file"
                                       class="w-full px-4 py-4 border-2 border-dashed border-gray-300 rounded-2xl bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 cursor-pointer hover:border-blue-400 hover:bg-blue-50 file:hidden" />

                                <!-- استایل سفارشی برای نمایش فایل -->
                                <div class="absolute left-4 top-1/2 transform -translate-y-1/2 pointer-events-none">
                                    <div class="flex items-center space-x-3 space-x-reverse">
                                        <div class="p-2 bg-blue-100 rounded-lg">
                                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                            </svg>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-gray-700 font-medium">انتخاب فایل</p>
                                            <p class="text-xs text-gray-500">حداکثر حجم: 10MB</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="absolute right-4 top-1/2 transform -translate-y-1/2 pointer-events-none">
                                    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                     
                        </div>
                        <span asp-validation-for="File" class="block text-sm text-red-600 mt-2"></span>
                    </div>

                    <!-- دکمه‌های فرم -->
                    <div class="pt-6 border-t border-gray-200">
                        <div class="flex flex-col md:flex-row gap-4">
                            @{
                                var roleId = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
                                if (roleId == "1" || roleId == "2")
                                {
                                    <button type="submit"
                                            class="flex-1 flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:-translate-y-0.5 shadow-lg hover:shadow-xl">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                        ایجاد گزارش
                                    </button>
                                    <a asp-action="Index"
                                       class="flex-1 flex items-center justify-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-3 px-6 rounded-xl transition-all duration-200">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                        بازگشت
                                    </a>
                                }
                                else
                                {
                                    <button type="submit"
                                            class="flex-1 flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:-translate-y-0.5 shadow-lg hover:shadow-xl">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                        ایجاد گزارش
                                    </button>
                                    <a asp-action="Myreports"
                                       class="flex-1 flex items-center justify-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-3 px-6 rounded-xl transition-all duration-200">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                        بازگشت
                                    </a>
                                }
                            }
                           
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- نکات مهم -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-2xl p-6">
            <h3 class="font-bold text-blue-800 mb-3 flex items-center">
                <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                نکات مهم
            </h3>
            <ul class="space-y-2 text-blue-700">
                <li class="flex items-start">
                    <svg class="w-4 h-4 ml-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span>پس از ارسال، گزارش توسط مسئول مربوطه بررسی خواهد شد</span>
                </li>
                <li class="flex items-start">
                    <svg class="w-4 h-4 ml-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span>فرمت‌های مجاز برای فایل: PDF, Word, Excel,</span>
                </li>
                <li class="flex items-start">
                    <svg class="w-4 h-4 ml-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span>در صورت نیاز به پیگیری، از قسمت گزارش‌های من اقدام کنید</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- استایل‌های سفارشی و انیمیشن -->
